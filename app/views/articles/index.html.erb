<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Show</th>
      <th>New</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to 'Show', user_article_path(current_user, article) %></td>
        <td><%= link_to 'Edit', edit_user_article_path(current_user, article) %></td>
        <td><%= link_to 'Destroy', user_article_path(current_user, article), method: :delete, data: { confirm: 'Are you
        sure?' }
				%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_user_article_path(current_user) %>
